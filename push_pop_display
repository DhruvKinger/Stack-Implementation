#include <bits/stdc++.h>
#include <iostream>
#include <unordered_map>
using namespace std;
void showstack(stack<int> s)
{
    while(!s.empty())
    {
        cout<<s.top()<<" ";
        s.pop();
    }
    cout<<endl;
}

int main()
{
    std::stack<int> s ;
    s.push(10);
    s.push(20);
    s.push(30);
    s.push(11);
    s.push(0);
   cout<<" stack size is :"<<s.size();
 cout<<"\nStack is :";
    showstack(s);
cout<<"Pop operation performed\n";s.pop();
cout<<"Now Stack is :";
    showstack(s);

     return 0;
}
